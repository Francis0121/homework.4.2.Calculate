<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1">
    
    <!-- EditText Input layout -->
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_margin="20dp">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/calculate_input" android:layout_weight="1" android:textColor="#000"
                android:background="#fff" android:paddingLeft="10dp" android:paddingRight="10dp"
                android:paddingTop="5dp" android:paddingBottom="5dp"
                android:editable="false"/>
    </LinearLayout>
    
    <!-- Number Layout 0~4 -->
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0"
                android:id="@+id/number_0" android:layout_margin="5dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/number_1" android:layout_margin="5dp"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2"
                android:id="@+id/number_2" android:layout_margin="5dp"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="3"
                android:id="@+id/number_3" android:layout_margin="5dp"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="4"
                android:id="@+id/number_4" android:layout_margin="5dp"/>
    </LinearLayout>
    
    <!-- Number Layout 5~9 -->
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="5"
                android:id="@+id/number_5" android:layout_margin="5dp"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="6"
                android:id="@+id/number_6" android:layout_margin="5dp"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="7"
                android:id="@+id/number_7" android:layout_margin="5dp"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="8"
                android:id="@+id/number_8" android:layout_margin="5dp"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="9"
                android:id="@+id/number_9" android:layout_margin="5dp"/>
    </LinearLayout>
    
    <!-- Operator layout plus, minus -->
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            android:weightSum="1" android:layout_margin="20dp">
        <Button
                android:layout_width="100dp"
                android:layout_height="65dp"
                android:text="Plus"
                android:id="@+id/operator_plus" android:layout_weight="0.40" android:layout_marginRight="40dp"/>
        <Button android:layout_width="100dp" android:layout_height="match_parent" android:text="Minus"
                android:id="@+id/operator_minus" android:layout_weight="0.40"/>
    </LinearLayout>
    
    <!-- Operator layout div, mul -->
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:weightSum="1"
                  android:layout_margin="20dp" android:id="@+id/linearLayout">
        <Button android:layout_width="100dp" android:layout_height="65dp" android:text="Div"
                android:id="@+id/operator_div" android:layout_weight="0.40" android:layout_marginRight="40dp"/>
        <Button android:layout_width="100dp" android:layout_height="match_parent" android:text="Mul"
                android:id="@+id/operator_mul" android:layout_weight="0.40"/>
    </LinearLayout>

</LinearLayout>

